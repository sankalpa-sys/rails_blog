<link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
<link href="https://netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet">
<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>

<div class="container col-lg-12 main my-4">
  <div class="col-lg-12 post">
    <div class="container">

      <h2>
        <h3 class=ubuntu><u><%= @post.title.capitalize%></u></h3>
      </h2>
      <div class="body-text">

        <p class='text-muted ubuntu'>By
          <%= @post.user.username%>
          |
          <%= @post.created_at.strftime("%B %e, %Y") unless @post.created_at.nil?%> | <%=@post.views%> views |</p>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <p><%= @post.body%></p>
          </div>
        </div>

      </div>
      <br/>

    </div>

  </div>
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <% if @post.user == current_user || current_user.try(:admin)%>
    <li class="breadcrumb-item"><a href="<%= edit_post_path(@post)%>">Edit</a></li>
    <% end%>
    <li class="breadcrumb-item"><a href="/">Back</a></li>
  </ol>
</nav>
  <hr>

  <%= render 'comments/form'%><br>
  <%= render 'comments/comment'%>

</div>


<!-- css -->

<style media="screen">
  .main {
    background: #f6f6f6;
  }
  body {
    background: #f6f6f6;
  }
  .ubuntu {
    font-family: 'Ubuntu', sans-serif;
  }
  p {
    font-family: 'Ubuntu', sans-serif;
    text-align: justify;
  }
  .pacifico {
    font-family: 'Pacifico', sans-serif;
    font-size: 2.4em;
  }
</style>
