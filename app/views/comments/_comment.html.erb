<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200&display=swap" rel="stylesheet">

<div class="container">
  <div class="row">
    <div class="panel panel-default widget">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-comment"></span>
        <h3 class="panel-title">
          <i>Comments (<%= @post.comments.count%>)</i>
        </h3>
      </div><br>
      <% @post.comments.each do |comment|%>
        <% if comment.user_id%>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <div class="row">
                <div class="col-xs-10 col-md-11">
                  <div>
                    <div class="mic-info">

                      <a><%= comment.user.try(:username)%></a>
                      on
                      <%= comment.created_at.strftime("%B %e, %Y") unless comment.created_at.nil?%>
                    </div>
                  </div><br>
                  <div class="comment-text">
                    <%= comment.comment%>
                  </div>
                  <div class="action">
                    <% if comment.user == current_user || current_user.admin || current_user == @post.user%>
                      <%= link_to "Delete", [comment.post, comment], method: :delete, class: "badge rounded-pill bg-danger", data: {confirm: 'Are you sure ?'}%>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div><br>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<style media="screen">
  .widget .panel-body {
    padding: 0;
  }
  .widget .list-group {
    margin-bottom: 0;
  }
  .widget .panel-title {
    display: inline;
  }
  .widget .label-info {
    float: right;
  }
  .widget li.list-group-item {
    border-radius: 0;
    border: 0;
    border-top: 1px solid #ddd;
  }
  .widget li.list-group-item:hover {
    background-color: rgba(86,61,124,.1);
  }
  .widget .mic-info {
    color: #666666;
    font-size: 11px;
  }
  .widget .action {
    margin-top: 5px;
  }
  .widget .comment-text {
    font-size: 12px;
  }
  .widget .btn-block {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
.comment-text{
  font-family: 'Source Sans Pro', sans-serif;
}
</style>
